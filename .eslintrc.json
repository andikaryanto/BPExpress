{
    "env": {
        "browser": true,
        "es2021": true
    },
    "plugins" : [
        "@babel/eslint-plugin"
    ],
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
	"parser": "@babel/eslint-parser",
    // "parser": "babel-eslint",
    "ignorePatterns": ["src/assets/*", "./node_modules/*"],
    "rules": {
        "max-len": [
            2, {
                "code": 120
             }
        ],
        "camelcase" : 0,
        "indent": [0, 4],
        // "indent": [2, "tab", {
        //     "ignoredNodes": ["TemplateLiteral"]
        // }],
        // "indent": "off",
        "template-curly-spacing" : "off",
        "no-unused-vars": 0,
        "new-cap" : [
            2,{
                "newIsCap": false,
                "capIsNew": false
            }
        ],
        "no-tabs": [
            2, {
                "allowIndentationTabs": true    
            }
        ],
        "no-use-before-define": [2, {"classes": true}],
        "no-invalid-this": "off"
    }
}
